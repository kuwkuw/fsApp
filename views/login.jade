extends layout

block content
   h1 Login to
   div.login-form
      form(action="login" method="post")
         div.form-group
            label Email
            input(type = "email" name="email").form-control
         div.form-group
            label Password
            input(type = "password" name="password").form-control

         input(type = "submit" value = "Login").btn.btn-default

